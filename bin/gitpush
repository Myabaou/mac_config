#!/bin/sh

# Perform add commit push with git command
# Usage: pushgit.sh "commit message"

# 引数の指定がなかったらエラー終了
if [ $# -eq 0 ]; then
  echo "Usage: pushgit.sh \"commit message\""
  exit 1
fi

GITADD="git add ."
echo "[INFO] ${GITADD}"
$GITADD
GITCOMMIT="[INFO] git commit -m \"$1\""
# 引数の値がうまくとれないのでそのまま実行
git commit -m "$1"
GITPUSH="git push -u origin head"
echo $GITPUSH
$GITPUSH

echo "[INFO] gh pullrequest command exsample."
echo "gh pr create --title \"${1}\" --body \"${1}\" --base main"

CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
echo "Current branch: $CURRENT_BRANCH"

gh pr list --state open --base main --head $CURRENT_BRANCH
# gh pr merge pull_number
echo "gh merge <pull_number>"

